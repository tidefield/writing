---
const { currentPath } = Astro.props;
---

<nav>
    <a href="/" class={currentPath === "/" ? "active" : ""}>About</a>
    <a href="/writing" class={currentPath === "/writing" ? "active" : ""}
        >Writing</a
    >
    <a href="/subscribe" class={currentPath === "/subscribe" ? "active" : ""}
        >Subscribe</a
    >
    <a href="/rss.xml" class="rss-link" title="RSS Feed" target="_blank">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="M4 11a9 9 0 0 1 9 9"></path>
            <path d="M4 4a16 16 0 0 1 16 16"></path>
            <circle cx="5" cy="19" r="1"></circle>
        </svg>
    </a>
</nav>

<style>
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid #eee;
    }
    nav a {
        color: #333;
        text-decoration: none;
        margin-right: 1.5rem;
    }
    nav a:hover {
        color: #0066cc;
    }
    nav a.active {
        font-weight: 600;
    }
    nav a.rss-link {
        display: inline-flex;
        align-items: center;
        vertical-align: middle;
        margin-right: 0;
    }
</style>
